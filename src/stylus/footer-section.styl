/*Footer section*/

.footer-section
  background #c0301c
  color: #fff

  .break-line
    background #fff

  .socials-container
    display flex
    justify-content center
    padding 0
    list-style none

    .socials-item
      margin: 0 15px

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

      .socials-link
        display block
        width 35px
        height 35px
        border 2px solid #fff
        border-radius 50%

        &:hover
          background-color: #fff





/*Footer section end*/
