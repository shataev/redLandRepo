/*Contact section*/

.info-item
  position relative
  margin-bottom 35px
  padding-left 25px

  &:last-child
    margin-bottom 0

  .fa
    position absolute
    top 0px
    left 3px
    font-size 22px

    &.fa-mobile
      font-size 28px
      top -4px

    &.fa-envelope
      font-size 18px
      top 1px
      left 0

  .info-item-heading
    font-size 16px

  .info-item-content
    font-size 14px

.contact-form-input
  width 100%
  height 44px
  padding: 15px
  //background-color #bf2f1b
  border 1px solid #555555
  margin-bottom 20px
  //font-size 12px
  line-height 20px
  color #585858
  outline none

  &:focus
    border-color #bf2f1b

  &.message-input
    height auto
    resize none

.contact-form-submit-button
  margin-right 40px

.contact-form-footnote
  display inline-block

.contact-form-submit-button
  width 170px
  padding 0px
  background-color #fff
  margin-right 35px

  &:hover
    background-color #bf2f1b
    border-color #bf2f1b
    color #fff

.is-red
  color red
  margin-right 5px

/*Contact section end*/
