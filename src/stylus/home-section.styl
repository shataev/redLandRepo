/*Home section*/

.home-section
  position: relative
  //background-image: url('../../app/img/home-bg.png')
  background-image: url("./../img/home-bg.png")
  background-size  100% 100%
  background-attachment: fixed, fixed
  color: #ffffff

.bg-overlay
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background #000
  opacity: 0.4

.get-started-box
  height: 100vh
  min-height: 765px

.logo,
.welcome,
.slogan,
.start-button-box
  text-align center

.welcome
  text-transform uppercase
  font-size 48px
  font-weight 600

.slogan
  font-size: 24px
  font-family roboto_slabregular

.motivation-button
  background transparent
  border 2px solid #fff
  border-radius 2px
  font-size 18px
  color #fff
  text-transform: uppercase
  outline none
  font-weight 600
  padding 10px 25px

  &:hover
    cursor pointer
    background-color #ffffff
    color #c0301c

/*Home section end*/