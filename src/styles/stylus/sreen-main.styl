.width-container
  max-width 1370px
  margin 0 auto

.section
  padding 100px 0
  color: #555555


/*Page Header*/

.header
  position: fixed;
  z-index: 1;
  color: #ffffff

/*Page Header end*/


/*Home section*/

.home-section
  position: relative
  background-image: url('../../app/imgs/home-bg.png')
  background-size  100% 100%
  background-attachment: fixed, fixed
  color: #ffffff

.bg-overlay
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background #000
  opacity: 0.4

.get-started-box
  height: 100vh
  min-height: 765px

.logo,
.welcome,
.slogan,
.start-button-box
  text-align center

.welcome
  text-transform uppercase
  font-size 48px

.slogan
  font-size: 24px

.start-button
  background transparent
  border 2px solid #fff
  border-radius 2px
  font-size 18px
  color #fff
  text-transform: uppercase
  outline none
  font-weight 600
  padding 10px 25px

/*Home section end*/


/*Services section*/

.services-section
  height 575px

.section-heading-row
  text-align center
  margin-bottom 70px

.services-heading
  text-transform uppercase
  font-size 26px
  margin-bottom: 30px

.break-line
  width 60px
  height 2px
  display block
  background #555555
  margin 0 auto 20px

.section-description
  font-size 22px

.advantages-list
  list-style none
  padding 0
  margin 0


.advantage-box
  text-align center

.advantage-img-container
  width 90px
  height 90px
  box-sizing border-box
  border 2px solid #eee
  border-radius 50%
  margin 0 auto 20px


.advantage-heading
  font-size 18px
  line-height 32px
  text-transform: uppercase
  margin-bottom 10px

.advantage-description
  height: 60px
  font-size: 18px
  line-height: 19px
  overflow: hidden

/*Services section end*/


/*About section*/

.about-section
  background #f8f8f8

.about-info-row
  margin-bottom 80px

.about-info
  font-size: 18px
  line-height: 19px
  overflow: hidden

.employees-list
  list-style none
  display: flex
  justify-content: space-between

.employee-photo-box
  position relative
  width: 260px
  height: 250px
  overflow: hidden
  margin 0 auto 10px
  &:hover
    background #888888
    & .employee-photo
      opacity 0.5
    & .socials-box
      opacity 1

.employee-photo
  width 100%
  height 100%

.employee-info-box
  text-align center

.employee-info-name
  font-size 18px
  text-transform uppercase

.employee-info-position
  font-size 16px
  max-height: 50px;

.slick-next,
.slick-prev
  background #c7c7c7
  width 25px
  height 40px
  top: 125px
  z-index 1

  &:hover
    background #c0301c

  &:focus
    background: #c7c7c7

    &:hover
      background #c0301c


.slick-next
  right 15px

.slick-prev
  left 15px

.socials-box
  width: 130px
  display: flex
  justify-content: space-between
  position: absolute
  bottom: 35px
  transform translateX(50%)
  list-style: none
  opacity: 0
  padding: 0
  margin: 0 auto

.social-button-container:hover
  background: #c0301c

.employee-social-btn
  display: block
  width 28px
  height 28px
  &.facebook-btn
    background: url('../imgs/icons/icon-facebook.svg') no-repeat;
    background-size: 16px;
    background-position: 6px 6px;
  &.twitter-btn
    background: url('../imgs/icons/icon-twitter.svg') no-repeat;
    background-size: 16px;
    background-position: 6px 6px;
  &.google-btn
    background: url('../imgs/icons/icon-google-plus.svg') no-repeat;
    background-size: 16px;
    background-position: 6px 6px;
  &.linkedin-btn
    background: url('../imgs/icons/icon-linkedin.svg') no-repeat;
    background-size: 16px;
    background-position: 6px 6px;

/*About section end*/


/*Latest Works*/

.works-category-list
  padding 0
  list-style none
  display: flex
  justify-content center

.works-category-item
  margin 0 10px

.works-category-item-name
  color #555555
  &:hover
    color #c0301c
    text-decoration none

.works-thumbs-container
  display flex
  justify-content space-between
  flex-wrap wrap

.works-thumb-box
  width 360px
  height 320px
  margin-bottom 30px

/*Latest Works end*/
