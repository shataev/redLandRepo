.wrapper
  color white

/*Home section*/

.home-section
  position: relative
  background-image: url('../../app/imgs/home-bg.png')
  background-size  100% 100%
  color: #ffffff

.screen-main
  max-width 1370px
  margin 0 auto

.bg-overlay
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background #000
  opacity: 0.4

.get-started-box
  height: 720px

.logo,
.welcome,
.slogan,
.start-button-box
  text-align center

.welcome
  text-transform uppercase
  font-size 48px

.slogan
  font-size: 24px

.start-button
  background transparent
  border 2px solid #fff
  border-radius 2px
  font-size 18px
  color #fff
  text-transform: uppercase
  outline none
  font-weight 600
  padding 10px 25px

/*Home section end*/